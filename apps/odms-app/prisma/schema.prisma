/// Any data node inherited from our API end (POI, Event, Source & Schema XYZ)
model Node {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  uuid        String      @unique @default(uuid())
  dateCreated DateTime    @default(now())
  lastFetched DateTime?
  lastUpdate  DateTime?   @updatedAt
  variant     NodeVariant @default(DEFAULT)
  display     Display
  source      String
  origin      String      @unique

  @@map("nodes")
}

/// Mapping of a 'omds:schema' (tbd)
enum NodeVariant {
  PLACE
  VENDOR
  EVENT
  CONTACT
  ASSET
  DEFAULT
}

/// Users become owner of their own dedicated team, so that they can invite collaborators
model Team {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  uuid        String    @unique @default(uuid())
  display     Display
  dateCreated DateTime  @default(now())
  lastFetched DateTime?
  lastUpdate  DateTime? @updatedAt
  memberIDs   String[]  @db.ObjectId
  members     User[]    @relation(fields: [memberIDs], references: [id])

  @@map("teams")
}

/// Users collaborate on Projects 
model Project {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  uuid        String       @unique @default(uuid())
  dateCreated DateTime     @default(now())
  lastFetched DateTime?
  lastUpdate  DateTime?    @updatedAt
  state       ProjectState @default(IDLE)
  display     Display
  source      String
  schema      String

  @@map("projects")
}

/// Projects have states

enum ProjectState {
  IDLE /// created no data / bounds or location / meta info set
  OPEN /// created and bounds / map / zoom / meta info set but no data points
  DRAFT /// work in progress / project has entity layers, locations, e.g. events linked to locations
  DONE /// a project is ready for a final review
  LIVE /// a project is published and available under a dedicated url
}
