{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["NEXT_PUBLIC_DISCORD_INVITE","NEXT_PUBLIC_GITHUB_INVITE","NODE_NO_WARNINGS", "NODE_ENV", "NEXTAUTH_SECRET", "NEXTAUTH_URL", "NEXT_PUBLIC_URL", "BREVO_APIKEY", "BREVO_EMAIL_FROM"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
